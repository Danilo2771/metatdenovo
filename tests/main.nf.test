nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "PIPELINE"

    test("Run with profile test") {

        when {
            params {
                outdir = "$outputDir"
                input = 'https://raw.githubusercontent.com/nf-core/test-datasets/metatdenovo/samplesheet/samplesheet.csv'
                skip_eukulele  = true
                skip_eggnog    = true
                skip_kofamscan = true
            }
        }

        then {
            assert workflow.success
        }
    }
}
